<h1> Text </h1>

<p>{{ section.settings.liquid-red }}</p>

<h1>Check box</h1>

{% if section.settings.liquid-checkbox == true %}
    <h2>Check box tested.!!</h2>
{% elsif %}
    <h2>Check box not checked.!!</h2>
{% endif %}

<h1>Number</h1>

{% if section.settings.liquid-number >= 0 %}
    {{ section.settings.liquid-number }}
{% endif %}


<h1>Radio</h1>
{{ section.settings.liquid-radio }}

{% schema %}
{
"name": "Liquid Reference",
"settings": [
    {
        "id":"liquid-red",
        "type": "richtext",
        "label": "A Reference for Shopify Liquid"
    },
    {
    
        "id":"liquid-checkbox",
        "type":"checkbox",
        "label": "A checkbox in liquid"
    
    },
    {
    "id":"liquid-number",
    "type": "number",
    "label": "Enter number :"
    
    },
    {
        "id":"liquid-radio",
        "type": "radio",
        "label": "Add a radio button",
        "options":
        [
            {
                "value": "option-1",
                "label": "Option 01"
            },
            {
                "value": "option-2",
                "label": "Option 02"
            }
        ]
        
    }

],


"presets": [
    {
    "name":"Liquid Reference",
    "category": "Reference"
    }
]

}

{% endschema %}